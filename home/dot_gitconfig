[user]
  name = Andrey Subbota
  email = subbota@gmail.com
	signingkey = 4D726D09
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  pager = delta

[github]
  user = numbata

[push]
  default = current
  autoSetupRemote = true

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[alias]
  co = checkout
  ci = commit -v
  st = status
  br = branch
  up = pull --rebase
  put = push origin HEAD
  ds = diff --staged
  undo = reset --soft HEAD^
  ls = log --pretty=format':%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short
  graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  ltag = !bash -c 'git tag -l | sort -V | tail -1'
  lp = log -p
  recent = "!f() { n=10; while [ $# -gt 0 ]; do [ \"$1\" = \"-n\" ] && shift && n=$1 || shift; done; git reflog show --pretty='%gs' | grep checkout | awk '{print $NF}' | grep -v '^HEAD~' | awk '!seen[$0]++' | head -n \"$n\"; }; f"
  short = status -sb
  amend = commit --amend --no-edit
  untracked = ls-files --others --exclude-standard
  fixup = rebase -i HEAD~3
  configs = config --list --show-origin
  stash-all = stash push --include-untracked
  stash-pop = stash pop
  stash-list = stash list
  lg = log --graph --oneline --decorate --all
  last = log -1 HEAD

[merge]
  conflictstyle = diff3

[pull]
  rebase = true
  ff = only

[help]
  autocorrect = prompt

[pack]
  threads = 4
  windowMemory = 100m

[commit]
  template = ~/.stCommitMsg
  gpgsign = true
  verbose = true

[gpg]
	program = gpg

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

[branch]
  sort = -committerdate

[tag]
  sort = version:refname

[fetch]
  prune = true
  pruneTags = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true
  line-numbers = true

#!/bin/bash

set -euo pipefail

echo "Cleaning up Dock..."

# List of Dock items to remove (English and Russian)
dock_items=(
  "App Store"
  "Books"
  "Calendar"
  "Contacts"
  "FaceTime"
  "Freeform"
  "Keynote"
  "Launchpad"
  "Mail"
  "Maps"
  "Messages"
  "Music"
  "Notes"
  "Numbers"
  "Pages"
  "Photos"
  "Podcasts"
  "Reminders"
  "Safari"
  "Siri"
  "TV"
  "Заметки"
  "Календарь"
  "Карты"
  "Контакты"
  "Музыка"
  "Напоминания"
  "Подкасты"
  "Системные настройки"
  "Сообщения"
  "Фото"
)

# Loop through each item and attempt to remove it
for item in "${dock_items[@]}"; do
  dockutil --remove "$item" --no-restart 2>/dev/null || true
done

# Restart Dock once at the end
killall Dock

echo "Dock cleanup completed."
